{
  "name": "hivemind-context-governance",
  "version": "2.6.1",
  "description": "Context-Aware Governance Layer for OpenCode - prevents drift and manages session state across lifecycles",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "hivemind-context-governance": "dist/cli.js",
    "hivemind": "dist/cli.js"
  },
  "files": [
    "dist",
    "bin",
    "skills",
    "commands",
    "agents",
    "workflows",
    "templates",
    "prompts",
    "references",
    "docs/10-commandments.md",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shynlee04/hivemind-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/shynlee04/hivemind-plugin/issues"
  },
  "homepage": "https://github.com/shynlee04/hivemind-plugin#readme",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc && chmod +x dist/cli.js",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint:boundary": "bash scripts/check-sdk-boundary.sh",
    "test": "bash scripts/check-sdk-boundary.sh && tsx --test tests/*.test.ts",
    "prepublishOnly": "npm run typecheck && npm test && npm run build"
  },
  "keywords": [
    "opencode",
    "opencode-plugin",
    "plugin",
    "governance",
    "context-management",
    "agent-lifecycle",
    "hivemind"
  ],
  "author": "HiveMind Contributors",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "yaml": "^2.3.4",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "^1.1.53",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": ">=1.1.0",
    "ink": ">=5.0.0",
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "@opencode-ai/plugin": {
      "optional": false
    },
    "ink": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  }
}
